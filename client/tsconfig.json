{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": ["./src"]
    },
    "strict": true,
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2018", "DOM"],
    "allowJs": true,
    "outDir": "dist"
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
